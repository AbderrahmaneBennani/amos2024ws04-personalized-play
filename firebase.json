{
  "firestore": {
			"rules": "firestore.rules",
			"indexes": "firestore.indexes.json"
		},
		"emulators": {
			"auth": {
				"port": 2000
			},
			"functions": {
				"port": 2001
			},
			"firestore": {
				"port": 2002
			},
			"ui": {
				"enabled": true,
				"port": 2003
			},
			"singleProjectMode": true
		},
		"functions": [
			{
				"source": "functions",
				"codebase": "functions",
				"ignore": [
					"node_modules",
					".git",
					"firebase-debug.log",
					"firebase-debug.*.log",
					"*.local"
				],
				"predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
			},
			{
				"source": "flows",
				"codebase": "flows",
				"predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
			}
		]
}
